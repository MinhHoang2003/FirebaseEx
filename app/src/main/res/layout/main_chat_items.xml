<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/image_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:text="Vernon Bradley"
        android:textColor="@color/darkish_pink"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/imageAvatar"
        app:layout_constraintTop_toTopOf="@id/imageAvatar" />

    <View
        android:layout_width="20dp"
        android:background="@drawable/bg_status_unread"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@id/imageAvatar"
        app:layout_constraintRight_toRightOf="@id/imageAvatar"/>

    <TextView
        android:id="@+id/textContentFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Shall we meet today?"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/textFrom"
        app:layout_constraintTop_toBottomOf="@id/textFrom" />

</androidx.constraintlayout.widget.ConstraintLayout>